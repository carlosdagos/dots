(require 'package)
(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(package-archives
   (quote
    (("gnu" . "http://elpa.gnu.org/packages/")
     ("melpa-stable" . "http://stable.melpa.org/packages/"))))
 '(package-selected-packages
   (quote
    (slime flycheck flymake-haskell-multi neotree relative-line-numbers rainbow-delimiters quelpa haskell-mode git-gutter git-gutter+ evil-numbers evil))))

(package-initialize)

;; Start evil mode
(require 'evil)
(evil-mode 1)

;; Require powerline
(require 'powerline)
(powerline-vim-theme)

;; Require neotree
(require 'neotree)

;; Start rainbow delimiters
(require 'rainbow-delimiters)
(add-hook 'prog-mode-hook 'rainbow-delimiters-mode)

;; Highlight matching parenthesis
(show-paren-mode 1)
(require 'paren)
(set-face-background 'show-paren-match (face-background 'default))
(set-face-foreground 'show-paren-match "#def")
(set-face-attribute 'show-paren-match nil :weight 'extra-bold)

;; Follow the source file to symlinks automatically always
(setq vc-follow-symlinks t)

;; Show line numbers
(global-linum-mode t)

;; Hide the menubar and toolbar
(if window-system
  (tool-bar-mode -1))
(menu-bar-mode -1)

;; Inferior lisp program as sbcl
(setq inferior-lisp-program (executable-find "sbcl"))

;; Bells annoy me
(setq visible-bell 1)

;; Custom set faces
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )
