(require 'package)
(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(package-archives
   (quote
    (("gnu" . "http://elpa.gnu.org/packages/")
     ("melpa-stable" . "http://stable.melpa.org/packages/"))))
 '(package-selected-packages
   (quote
    (slime flycheck rainbow-delimiters quelpa git-gutter git-gutter+ evil-numbers evil))))

(add-to-list 'load-path "~/.emacs.d/evil")

(package-initialize)

;; Start evil mode
(require 'evil)
(evil-mode 1)

;; Require powerline
(require 'powerline)
(powerline-vim-theme)

;; Start rainbow delimiters
(require 'rainbow-delimiters)
(add-hook 'prog-mode-hook 'rainbow-delimiters-mode)

;; Highlight matching parenthesis
(show-paren-mode 1)
(require 'paren)
(set-face-background 'show-paren-match (face-background 'default))
(set-face-foreground 'show-paren-match "#def")
(set-face-attribute 'show-paren-match nil :weight 'extra-bold)

;; Follow the source file to symlinks automatically always
(setq vc-follow-symlinks t)

;; Show line numbers
(global-linum-mode t)

;; Hide the menubar and toolbar
(if window-system
  (tool-bar-mode -1))
(menu-bar-mode -1)

;; Inferior lisp program as alisp
(setq inferior-lisp-program (executable-find "alisp"))

;; Bells annoy me
(setq visible-bell 1)

;; Smooth scrolling is better
(require 'sublimity)
(require 'sublimity-scroll)
(sublimity-mode 1)
(setq scroll-conservatively 10000)
(setq scroll-margin 1
      scroll-conservatively 0
      scroll-up-aggressively 0.01
      scroll-down-aggressively 0.01)
(setq-default scroll-up-aggressively 0.01
              scroll-down-aggressively 0.01)

;; Custom set faces
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )
